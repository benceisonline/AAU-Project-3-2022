<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vBoxTheWholeBox" alignment="CENTER" prefHeight="75.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UserBoxController">
   <children>
      <HBox fx:id="hbox" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="75.0" prefWidth="1000.0" spacing="15.0">
         <children>
            <HBox alignment="CENTER" prefHeight="75.0" prefWidth="100.0">
               <children>
                  <Label fx:id="firstNameLabel" alignment="CENTER" contentDisplay="CENTER" text="FirstName" />
               </children>
            </HBox>
            <HBox fx:id="expandHBox" alignment="CENTER" maxHeight="-Infinity" prefHeight="75.0" prefWidth="100.0" spacing="10.0">
               <children>
                  <Label fx:id="lastNameLabel" text="LastName" />
               </children>
            </HBox>
            <Region prefHeight="75.0" prefWidth="100.0" />
            <HBox alignment="CENTER" prefHeight="75.0" prefWidth="101.0">
               <children>
                  <Label fx:id="roleLabel" text="Role" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="75.0" prefWidth="101.0">
               <children>
                  <Label fx:id="phoneNumberLabel" text="Phone Number" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="75.0" prefWidth="200.0">
               <children>
                  <Label fx:id="emailLabel" text="Email" />
               </children>
            </HBox>
            <Button fx:id="information" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#editUser" prefHeight="25.0" prefWidth="25.0" text="i">
               <tooltip>
                  <Tooltip text="Click for employee information" />
               </tooltip></Button>
            <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteTaskFromDB" text="Delete">
               <tooltip>
                  <Tooltip text="Once deleted, this will not be recoverable" />
               </tooltip></Button>
         </children>
      </HBox>
      <Separator prefWidth="200.0" />
   </children>
</VBox>
